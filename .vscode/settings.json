// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "node_modules/": true,
        "build/": true,
        "typings/": true,
        "src/*.js": {
            "when": "$(basename).js"
        },
        "src/*.js.map": true,
        "src/*.d.ts": true,
        "spec/**/*.js": {
            "when": "$(basename).js"
        },
        "spec/**/*.js.map": true,
        "spec/**/*.d.ts": true,
        "files.eol": true,
        "files.insertFinalNewline": true,
        "typescript.tsdk": "./node_modules/typescript/lib"
    }
}